pipeline {
    agent any

    environment {
        // Set environment variables for Docker Hub credentials
        DOCKER_CREDENTIALS_ID = 'pavan.cs02132@gmail.com'
        DOCKER_IMAGE_NAME = 'rathorep/python:1.0'
    }

    stages {
        stage('Checkout') {
            steps {
                // Checkout the code from the repository
                git branch: 'main', url: 'https://github.com/rathorep/jenkins.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build the Docker image
                    def image = docker.build(DOCKER_IMAGE_NAME)
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    // Login to Docker Hub
                    docker.withRegistry('https://index.docker.io/v1/', DOCKER_CREDENTIALS_ID) {
                        // Push the Docker image to Docker Hub
                        docker.image(DOCKER_IMAGE_NAME).push('1.0')
                    }
                }
            }
        }
    }

    post {
        always {
            // Clean up the Docker environment
            cleanWs()
        }
    }
}
