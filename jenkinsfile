pipeline {
    agent any

    environment {
        app = ''
    }
    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    app = docker.build("rathorep/python")
                }
            }
        }
        stage('Push Docker Image') {
            steps {
                script {
                    // Login to Docker Hub
                    docker.withRegistry('https://registry.hub.docker.com', 'dockerhub') {
                        // Push the Docker image to Docker Hub
                        docker.image("rathorep/python:1.0").push('1.0')
                    }
                }
            }
        }
    }
}
